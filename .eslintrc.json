{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "webextensions": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "globals": {
    "SEPostWatcher": "writable",
    "dialogPolyfill": "readonly"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "object-property-newline": ["error", {
      "allowAllPropertiesOnSameLine": true
    }],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-trailing-spaces": "error",
    "eol-last": "error"
  }
}
